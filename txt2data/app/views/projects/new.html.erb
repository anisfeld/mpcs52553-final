<h1>Begin a project</h1>

<div class="row">
  <div class="col-sm-4">

    <%= form_tag "/projects" do %>

      <p>Title: <input name="title" type="text" autofocus class="form-control"></p>
      <p>Description: <input name="description" type="textarea" class="form-control"></p>
      <p>Logo: <input name="logo_url" type="text" class="form-control" placeholder="Add the url to a picture"></p>

      <!-- Need sessions before this will work-->
        <input name="owner" type="hidden" value="1" >
      <button class="btn btn-primary">Save Project</button>
      <!--<button class="btn btn-primary">Save and add data</button> -->
    <% end %>

  </div>
</div>