<table class="table table-striped table-bordered">
    <thead>
      <tr>
      	<!-- FUTURE: determine column headers on a project by project basis using Forms -->
        <th>View/Update</th>
        <th>Fun words</th>
        <th>Sad words</th>
        <th>Hope words</th>
        <th>Gloom words</th>
        <th>Delete</th>
      </tr>
    </thead>
    <tbody>
      <% Datum.all.where(project_id: @project.id).each do |data| %>
        <tr>
          <td><%= link_to data.id, "/projects/#{this_id}/data/#{data.id}/edit" %></td>
  

          <td><%=  data.field_1  %></td>
          <td><%=  data.field_2  %></td>
          <td><%=  data.field_3  %></td>
          <td><%=  data.field_4  %></td>

          <td>
          <%= link_to "[Delete]", "/projects/#{this_id}/data/#{data.id}", method: 'delete' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

